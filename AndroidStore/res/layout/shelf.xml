  android:paddingTop="48dip" />    <com.miadzin.shelves.view.BubbleTextView        android:id="@+id/title"        android:layout_width="160dip"        android:layout_height="194dip"        android:layout_alignParentBottom="true"        android:layout_centerHorizontal="true"        android:ellipsize="marquee"        android:gravity="center_horizontal"        android:paddingBottom="11dip"        android:paddingLeft="16dip"        android:paddingRight="16dip"        android:paddingTop="24dip"        android:singleLine="true"        android:textColor="@android:color/white"        android:textSize="13dip" />    <CheckBox        android:id="@+id/multiSelectCheck"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:layout_centerHorizontal="true"        android:layout_marginBottom="44dp"        android:visibility="invisible" />
    <com.miadzin.shelves.view.BubbleTextView        android:id="@+id/quantity"        android:layout_width="160dip"        android:layout_height="194dip"        android:layout_alignParentBottom="true"        android:layout_centerHorizontal="true"        android:ellipsize="marquee"        android:gravity="center_horizontal"        android:paddingBottom="11dip"        android:paddingLeft="16dip"        android:paddingRight="16dip"        android:paddingTop="150dip"        android:singleLine="true"        android:textColor="@android:color/white"        android:textSize="13dip" /></RelativeLayout>